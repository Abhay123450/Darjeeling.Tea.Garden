<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FaqActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/faqAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/faqToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:navigationContentDescription="Back"
            app:titleTextColor="@color/activity_title"
            app:title="FAQ"/>

    </com.google.android.material.appbar.AppBarLayout>

    <WebView
        android:id="@+id/webViewFaq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/faqAppBar"/>

    <RelativeLayout
        android:id="@+id/rlProgressFaq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateBehavior="repeat"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</RelativeLayout>