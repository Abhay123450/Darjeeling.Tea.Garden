    <LinearLayout
        android:id="@+id/llGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDiscountPrice"
        android:layout_toEndOf="@+id/imgItemImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtGradeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:text="@string/grade"/>

        <TextView
            android:id="@+id/txtGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llGrade"
        android:layout_toEndOf="@+id/imgItemImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLotNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:text="@string/lot_number"/>

        <TextView
            android:id="@+id/txtLotNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBagSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llLot"
        android:layout_toEndOf="@+id/imgItemImage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBagSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:text="@string/bag_size"/>

        <TextView
            android:id="@+id/txtBagSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="2dp"
            android:text="kg"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llBagSize"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">

<!--        this button only for decoration purpose-->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimary"
            android:text="@string/add"
            android:clickable="false"
            android:focusable="false"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToCart"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimary"
            android:text="@string/add"
            />

        <ProgressBar
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/llChangeQuantity"
            android:layout_width="116dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:weightSum="12"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtDecreaseQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:drawableEndCompat="@drawable/ic_baseline_remove_24"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="1"/>

            <TextView
                android:id="@+id/txtIncreaseQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:drawableStartCompat="@drawable/ic_baseline_add_24"
                app:drawableTint="@color/colorPrimary" />



        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlAddToSampleCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llBagSize"
        android:layout_toStartOf="@id/rlAddToCart"
        android:layout_marginEnd="10dp">

        <!--        this button only for decoration purpose-->
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimary"
            android:text="@string/ask_for_sample"
            android:textColor="@color/white"
            android:clickable="false"
            android:focusable="false"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddToSampleCart"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorPrimary"
            android:text="@string/ask_for_sample"
            android:visibility="visible"/>

        <ProgressBar
            android:layout_width="116dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/llChangeSampleQuantity"
            android:layout_width="156dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:weightSum="14"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtDecreaseSampleQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:drawableEndCompat="@drawable/ic_baseline_remove_24"
                app:drawableTint="@color/colorPrimary" />

            <TextView
                android:id="@+id/txtSampleQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="10 "/>

            <TextView
                android:id="@+id/txtIncreaseSampleQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                app:drawableStartCompat="@drawable/ic_baseline_add_24"
                app:drawableTint="@color/colorPrimary" />



        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>