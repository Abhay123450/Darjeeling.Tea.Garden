<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webViewVideo"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <TextView
                android:id="@+id/txtVideoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Title"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtVideoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="12 Dec 2012"
                    android:textSize="16sp"
                    android:textColor="@color/gray_686868"
                    app:drawableTint="@color/light_gray_a9a9a9"
                    app:drawableLeftCompat="@drawable/ic_baseline_access_time_24"/>

                <TextView
                    android:id="@+id/txtVideoLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_alignParentEnd="true"
                    android:text="English"
                    android:textSize="16sp"
                    android:textColor="@color/gray_686868"
                    app:drawableTint="@color/light_gray_a9a9a9"
                    app:drawableLeftCompat="@drawable/ic_baseline_language_24" />

            </RelativeLayout>



        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>